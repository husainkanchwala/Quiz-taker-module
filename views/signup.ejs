<html>
	<head>
		<meta charset="utf-8"> 
		<title> LOG IN </title>
		<link href="stylesheet/signin.css" rel="stylesheet">
		<link rel= 'stylesheet' href='bootstrap/css/bootstrap.css'  type='text/css'/>
	</head>
	<body>
		<div class="container">
				<div class="col-lg-6">
						<h1> QATAP </h1>	
				</div>
				<div class="col-lg-6" >
					<form role="form" class="form-sign-in" action="/login">
							<button class="btn btn-lg btn-primary btn-block" type="submit" style="float:right;width:100px">Sign-in</button>	
					</form>
				</div>
				</br></br></br></br></br></br>
				<form class="form-signin" role="form" action="/signin" method="post" id="signup">
					<h2 class="form-signin-heading"> Sign Up</h2>
					<input type="text" class="form-control" placeholder="username" id="uid" name="uid" required autofocus>
					<div id="error1"></div>
					<input type="email" class="form-control" placeholder="email" id="eid" name="eid" required >
					<input type="password" class="form-control" placeholder="confirm-password" id="passwd" name="passwd" required >
					<input type="password" class="form-control" placeholder="confirm-password" id="xpasswd"name="xpasswd" required >
					<button class="btn btn-lg btn-primary btn-block" type="button" id="siu" style="float:middle">login</button>
					
				</form>
				<div id="error1"></div>
		</div>
	</body>
	<script src="jquery-1.10.2.min.js"></script>
    
    <script src='bootstrap/js/bootstrap.js'></script>
	<script src="/socket.io/socket.io.js"></script>    
	<script>
		var $j = jQuery.noConflict();
        var socket = io.connect();
        $j(function(){
        	
        	$j('#siu').click(function(){
                var user = $j('#uid').val();
                var email = $j('#eid').val();
                var passwd = $j('#passwd').val();
                var passwrd = $j('#xpasswd').val();
                if( passwd === passwrd){
                        socket.emit('newuser',user,passwd,email);
                }else{
                	$j('#passwd').val('');
                    $j('#xpasswd').val('');
                }
            });
            $j('#uid').blur(function(){
                    var name = $j('#uid').val();
                    socket.emit('check',name);        
            });
            $j('#eid').blur(function(){
                    var email = $j('#eid').val();
                    socket.emit('check-email',email);        
            });
            $j('#uid').click(function (){
            	$j('#error1').text('');
            });
        	$j('#eid').click(function(){
            	$j('#error1').text('');
            });

        });

        socket.on('tell',function(val){
            $j('#error1').text('NOT AVAILABLE USER NAME');
        });
        socket.on('tell-email',function(val){
            $j('#error1').text('NOT AVAILABLE eMAIL-ID');
        });
	    socket.on('forward',function(){
            $j('#signup').submit();
        });
	</script>
</html>