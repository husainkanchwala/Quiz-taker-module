	<script src="/socket.io/socket.io.js"></script>    
		<script>
			var $j = jQuery.noConflict();
			var rotation = function (ele){
			   $j(ele).rotate({
			      angle:0, 
			      animateTo:360, 
			      callback: rotation,
			      easing: function (x,t,b,c,d){        // t: current time, b: begInnIng value, c: change In value, d: duration
			          return c*(t/d)+b;
			      }
			   });
			}
			
			
	        var socket = io.connect();
	        $j(function(){
	        	$j('#siu').click(function(){
	                var user = $j('#uid').val();
	                var email = $j('#eid').val();
	                var passwd = $j('#passwd').val();
	                var passwrd = $j('#xpasswd').val();
	                if( passwd === passwrd){
	                        socket.emit('newuser',user,passwd,email);
	                }else{
	                	$j('#passwd').val('');
	                    $j('#xpasswd').val('');
	                }
	            });
	            $j('#uid').blur(function(){
	                    var name = $j('#uid').val();
	                    socket.emit('check',name);        
	            });
	            $j('#eid').blur(function(){
	                    var email = $j('#eid').val();
	                    socket.emit('check-email',email);        
	            });
	            $j('#uid').click(function (){
	            	$j('#ud').removeClass('has-error');
	            	
	            });
	        	$j('#eid').click(function(){
	            	$j('#ed').removeClass('has-error ');
	            	
	            });

	        });

	        socket.on('tell',function(val){
	            $j('#ud').addClass('has-error');
	            $j('#uid').val('');
	        });
	        socket.on('tell-email',function(val){
	            $j('#ed').addClass('has-error');
	            $j('#eid').val('');
	        });
		    socket.on('forward',function(){
	            $j('#signup').submit();
	        });
		</script>
